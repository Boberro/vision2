{% extends "layout.jinja2" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ request.route_path('home') }}">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                Back
            </a>
            <a class="pull-right" href="{{ request.route_path('delete_image', uid=image.uid) }}">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <div id="image">
                <img src="{{ request.route_path('uploaded_file', uid=image.uid) }}" alt="{{ image.filename }}">
            </div>
            <div id="helpers">
                <img class="emoji-angry" src="{{ request.static_path('vision2:static/cancer/angry.png') }}" alt="">
                <img class="emoji-joy" src="{{ request.static_path('vision2:static/cancer/joy.png') }}" alt="">
                <img class="emoji-neutral" src="{{ request.static_path('vision2:static/cancer/neutral.png') }}" alt="">
                <img class="emoji-sad" src="{{ request.static_path('vision2:static/cancer/sad.png') }}" alt="">
                <img class="emoji-surprised" src="{{ request.static_path('vision2:static/cancer/surprised.png') }}"
                     alt="">
            </div>
        </div>
    </div>
{% endblock content %}

{% block js %}
    <script type="text/javascript" src="{{ request.static_path('vision2:static/single_image.js') }}"></script>
{% endblock %}